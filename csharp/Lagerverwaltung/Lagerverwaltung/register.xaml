<UserControl x:Class="Lagerverwaltung.register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lagerverwaltung"
             mc:Ignorable="d" d:DesignWidth="300" Height="277">
    <Grid>
        <Label x:Name="lblTitle" Content="Register" HorizontalContentAlignment="Center" Margin="10,2,10,0" FontSize="20" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="btnRegister" Content="Register" Margin="10,196,10,0" Click="btnRegister_Click" Height="27" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxName" Margin="10,61,10,0" TextWrapping="Wrap" Text="" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lblName" Content="Name:" Margin="10,37,10,0" Height="28" VerticalAlignment="Top"/>
        <Label x:Name="lblPwd" Content="Password:" Margin="10,84,10,0" Height="28" VerticalAlignment="Top"/>
        <Label x:Name="lblConfirmPwd" Content="Confirm Password:" Margin="10,136,10,0" Height="29" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtBoxPwd" Margin="10,111,10,0" Height="25" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtBoxConfirmPwd" Margin="10,161,10,0" Height="25" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" Background="Transparent" BorderBrush="Transparent" Margin="10,232,10,0" Click="btnLogin_Click" Height="27" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
