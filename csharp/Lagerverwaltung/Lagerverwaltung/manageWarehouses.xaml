<UserControl x:Class="Lagerverwaltung.manageWarehouses"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lagerverwaltung"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="602.069">
    <Grid>
        <ListBox x:Name="listBoxWarehouses" BorderBrush="Black" BorderThickness="1px"  Margin="10,10,187,10">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Height" Value="50" />
                    <Setter Property="FontSize" Value="25"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Button x:Name="btnLogout" Content="Logout" Margin="0,10,10,0" Click="btnLogout_Click" HorizontalAlignment="Right" Width="172" Height="29" VerticalAlignment="Top"/>
        <Button Content="Add warehouse" HorizontalAlignment="Left" Height="29" Margin="420,44,0,0" VerticalAlignment="Top" Width="172"/>
    </Grid>
</UserControl>
