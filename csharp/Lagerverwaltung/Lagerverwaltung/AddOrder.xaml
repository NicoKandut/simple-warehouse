<UserControl x:Name="AddOrder" x:Class="Lagerverwaltung.addOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lagerverwaltung"
             mc:Ignorable="d" Height="594.682" Width="304.255"
             IsVisibleChanged="VisibleChanged"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="152*"/>
            <ColumnDefinition Width="152*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnOrder" Content="Order" Margin="17,550,10,0" Click="btnOrder_Click" Height="29" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="10,550,17,0" Click="btnCancel_Click" Height="29" VerticalAlignment="Top" Grid.Column="1"/>
        <Button  x:Name="btnAddProduct" Content="Add Product" Margin="10,71,17,0" Click="btnAddProduct_Click" Height="27" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cbProducts" Margin="10,157,17,0" Height="29" VerticalAlignment="Top" SelectionChanged="cbProducts_SelectionChanged" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtBoxAmount" Margin="10,223,17,0" TextWrapping="Wrap" PreviewTextInput="textInput" Text="" Height="31" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="lblSummary" Text="" IsReadOnly="True" VerticalScrollBarVisibility="Visible" FontSize="20" FontWeight="SemiBold" BorderBrush="Black" BorderThickness="1" Margin="10,273,17,0" Height="250" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="lblAmount" Content="Amount:" Height="27" Margin="10,197,17,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button  x:Name="btnRemoveProduct" Content="Remove Product" Margin="10,112,17,0" Click="btnRemoveProduct_Click" Height="27" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="lblTitle" Content="" HorizontalContentAlignment="Center" FontSize="30" Height="52" Margin="10,10,17,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
